{
  "name": "project-revelare-backend",
  "version": "2.0.0",
  "description": "Cloudflare Workers backend for Project Revelare digital forensics platform",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "deploy:staging": "wrangler deploy --env staging",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --target=es2020",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "cf-typegen": "wrangler types"
  },
  "keywords": [
    "cloudflare-workers",
    "api",
    "digital-forensics",
    "typescript"
  ],
  "author": "Project Revelare Team",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240909.0",
    "hono": "^4.0.0",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "jose": "^5.2.0",
    "itty-router": "^4.0.23"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0",
    "wrangler": "^3.70.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/project-revelare/backend"
  },
  "bugs": {
    "url": "https://github.com/project-revelare/backend/issues"
  },
  "homepage": "https://project-revelare.com"
}
