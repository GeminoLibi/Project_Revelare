# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
REVELARE_UPLOAD_FOLDER=cases
REVELARE_MAX_FILE_SIZE=2048
REVELARE_BINARY_CHUNK_SIZE=8192
REVELARE_DATABASE=logs/revelare_master.db
REVELARE_LOG_LEVEL=INFO

# =============================================================================
# AI/ML SERVICES (⚙️ CONFIGURED - Not Yet Implemented)
# =============================================================================
# OpenAI API for AI-powered analysis and content generation
OPENAI_API_KEY=

# Google Speech API for audio transcription and analysis
GOOGLE_SPEECH_API_KEY=

# =============================================================================
# IP GEOLOCATION & THREAT INTELLIGENCE (✅ IMPLEMENTED)
# =============================================================================
# IP-API.com - Free IP geolocation service (1000 requests/day)
# No key required for free tier
IP_API_KEY=

# AbuseIPDB - IP reputation database (1000 requests/day free)
# Sign up at: https://www.abuseipdb.com/
ABUSEIPDB_API_KEY=

# VirusTotal - Malware and URL analysis (500 requests/hour free)
# Sign up at: https://www.virustotal.com/
VIRUSTOTAL_API_KEY=

# Shodan - Device intelligence and vulnerability scanning (100 requests/month free)
# Sign up at: https://www.shodan.io/
SHODAN_API_KEY=

# =============================================================================
# DOMAIN & URL INTELLIGENCE (✅ IMPLEMENTED)
# =============================================================================
# URLScan - URL analysis and screenshot generation (1000 requests/month free)
# Sign up at: https://urlscan.io/
URLSCAN_API_KEY=

# =============================================================================
# BLOCKCHAIN & CRYPTOCURRENCY (✅ IMPLEMENTED)
# =============================================================================
# Bitcoin Abuse - Bitcoin address reputation checking (Free)
# Sign up at: https://www.bitcoinabuse.com/
BITCOIN_ABUSE_API_KEY=

# Chainabuse - Multi-chain cryptocurrency abuse detection (Free)
# Sign up at: https://chainabuse.com/
CHAINABUSE_API_KEY=

# =============================================================================
# EMAIL SERVER CONFIGURATION
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# =============================================================================
# API RATE LIMITS (requests per minute)
# =============================================================================
# Adjust these based on your API tier and usage patterns
IP_API_RATE_LIMIT=0.5
ABUSEIPDB_RATE_LIMIT=1.0
VIRUSTOTAL_RATE_LIMIT=4.0
SHODAN_RATE_LIMIT=1.0
URLSCAN_RATE_LIMIT=1.0
BITCOIN_ABUSE_RATE_LIMIT=1.0
CHAINABUSE_RATE_LIMIT=1.0

# =============================================================================
# API TIMEOUTS (seconds)
# =============================================================================
# Adjust timeouts based on API response times and your network
IP_API_TIMEOUT=15
ABUSEIPDB_TIMEOUT=10
VIRUSTOTAL_TIMEOUT=15
SHODAN_TIMEOUT=10
URLSCAN_TIMEOUT=15
BITCOIN_ABUSE_TIMEOUT=10
CHAINABUSE_TIMEOUT=10

# =============================================================================
# THREAT INTELLIGENCE CONFIGURATION
# =============================================================================
# Enable/disable specific threat intelligence features
ENABLE_IP_REPUTATION=true
ENABLE_URL_ANALYSIS=true
ENABLE_CRYPTO_ANALYSIS=true
ENABLE_DEVICE_INTELLIGENCE=true

# Minimum confidence threshold for threat indicators (0-100)
THREAT_CONFIDENCE_THRESHOLD=60

# Maximum number of API calls per analysis session
MAX_API_CALLS_PER_SESSION=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable API key validation on startup
VALIDATE_API_KEYS=true

# Enable detailed threat intelligence logging
ENABLE_THREAT_LOGGING=true

